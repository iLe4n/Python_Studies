#Verificar se um número é impar ou não 

a = 10 
b = 5 

if ( b % 2 == 0 ): 
    par = b
    print(f'Esse: {par} é um número par')
else: 
    ( b % 2 != 0)
    impar = b 
    print(f'Esse numero {impar} é impar')
    

a = 10 
b = 5 

if ( a % 2 == 0 ): 
    par = a
    print(f'Esse: {par} é um número par')
else: 
    ( a % 2 != 0)
    impar = a 
    print(f'Esse numero {impar} é impar')
    
